<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="5dip"
        android:id="@+id/llyInfo"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/map_display_info_height">

        <RelativeLayout
            android:id="@+id/llyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblName"
                android:text="Renato Matos"
                android:textSize="16dp"
                android:gravity="left|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnHide"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_marginRight="@dimen/btn_hide_margin_right"
                android:layout_width="25sp"
                android:layout_height="25sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/lblLocation"
            android:text="Am Alten Posthaus 6, 22041 Hamburg"
            android:textSize="16dp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameFragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"></FrameLayout>

</LinearLayout>
